@model IEnumerable<BorrowLend.Models.Expense>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                My expense list
            </h2>
        </div>
    </div>
    <div class="col-6 text-right" style="float:right; text-align:right">
        <a class="btn btn-primary w-75" asp-controller="Expense" asp-action="Create">Create new item</a>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-boarded table-striped" style="width:100%">
            <thead>
            <th> Expense name </th>
            <th> Amount </th>
            <th> Changes </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="33%">@item.ExpenseName</td>
                        <td width="33%">@item.Amount</td>
                        <td width="33%">
                            <a class="btn btn-success m-1" asp-controller="Expense" asp-action="Update" asp-route-id=@item.Id>Update</a>
                            <a class="btn btn-danger m-1" asp-controller="Expense" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

