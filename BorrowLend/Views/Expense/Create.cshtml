@model BorrowLend.Models.ViewModels.ExpenseVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseName" class="control-label"></label>
                <input asp-for="Expense.ExpenseName" class="form-control" />
                <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Amount" class="control-label"></label>
                <input asp-for="Expense.Amount" class="form-control" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenceType" class="control-label"></label>
                <select asp-for="Expense.ExpenceType" asp-items="@Model.TypeDropDown" class="form-control">
                        <option select>--Select Expense Type--</option>
                    </select>
                    <span asp-validation-for="Expense.ExpenceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

